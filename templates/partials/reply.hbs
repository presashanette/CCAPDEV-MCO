<div class="reply">
            <!-- Render each comment dynamically -->
            <div class="profile-container">
                <p class="profile-picture">
                {{#if aReply.author.profPicLink}}
                    <img src="{{aReply.author.profPicLink}}" class="profile-picture" />
                {{else}}
                    <img src="./public/images/defUser.png" class="profile-picture" />
                {{/if}}
                </p>

                <div class="user-info">
                    {{#if aReply.author.uname}}
                        <a class="user" href="/viewprofile/{{aReply.author._id}}">@{{aReply.author.uname}}</a>
                    {{else}}
                        <a class="user" href="/viewprofile/{{aReply.author._id}}">girlsUser</a>
                    {{/if}}
                </div>
            </div>

            <div class="editable">
                {{aReply.content}}
            </div>
            
            <button id="edit-button" data-post-id="{{post._id}}" data-comment-id="{{aReply._id}}">Edit</button>
            <button id="delete-button" data-post-id="{{post._id}}" data-comment-id="{{aReply._id}}">Delete</button>

