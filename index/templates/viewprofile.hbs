<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- styles -->
    <link rel="stylesheet" href="/index.css" />
    <link rel="stylesheet" href="/viewprofile.css" />
    <link rel="stylesheet" href="/comment.css" />

    <!-- scripts -->
    <script src="//code.jquery.com/jquery.min.js"></script>

    <script src="/index.js"></script>
    <script src="/comment.js"></script>
    <script src="/comment.js"></script>
    <title>View Profile || Girls</title>

  </head>
  <body>
    <!-- top navigation -->
    <nav class="nav-container nav-top-container">
      <ul class="nav-top-items">
        <li>
          <a id="logo" href="/homepage">GIRLS</a>
        </li>
        <li>
          <form action="/globalSearch" method="GET">
    <div class="search">
        <span class="material-symbols-outlined" id="search-symbol">search</span>
        <input type="search" class="search-input" name="query" placeholder="Search with tags here ..........">
        <button type="submit" class="bg-pink">Search</button>
    </div>
</form>

        </li>
      </ul>
    </nav>
    <!-- top navigation end -->

    <div class="wrapper">
      <!-- side navigation -->
      <nav class="nav-container nav-side-container">
        <ul class="nav-side-items">
          <li class="nav-symbol">
            <a class="nav-symbol-button" id="home-button" href="/homepage">
              <span
                class="material-symbols-outlined"
                id="home-symbol"
              >home</span>
              Home
            </a>
          </li>
          <li class="nav-symbol">
            <a
              class="nav-symbol-button"
              id="profile-button"
              href="/viewprofile"
            >
              <span
                class="material-symbols-outlined"
                id="profile-symbol"
              >person</span>Profile
            </a>
          </li>
          <br />
          <li class="nav-symbol">
            <a
              class="nav-symbol-button"
              id="profile-button"
              href="/recent"
            >
              <span
                class="material-symbols-outlined"
                id="filter-symbol"
              >schedule</span>Recent
            </a>
          </li>
          <li class="nav-symbol">
            <a
              class="nav-symbol-button"
              id="profile-button"
              href="/popular"
            >
              <span
                class="material-symbols-outlined"
                id="filter-symbol"
              >star</span>Popular
            </a>
          </li>
          <li>
            <a class="nav-button" id="create-button" href="/createpost">Create
              Post</a>
          </li>
          <li>
            <a class="nav-button" id="edit-profile" href="/editprofile">Edit
              Profile</a>
          </li>
          <li>
            <a class="nav-button" id="logout-button" href="/index">Log Out</a>
          </li>

        </ul>
      </nav>
      <!-- side navigation end -->

      <!-- content -->
      <div class="content">
        <div class="main">
          <div class="toppanel">

            <div class="panel">
              <div class="container">
                <img src="{{user.profPicLink}}" class="pic" />
                <div class="namebio">
                  <h1>{{user.uname}}</h1>
                  <p>{{user.bio}}</p>
                </div>

              </div>

            </div>
            <div class="spacer"></div>
          </div>

          <div class="bottompanel">
            <div class="spacer"></div>
            <div class="spacer"></div>
            <div class="spacer"></div>
            <div class="panel">
              <div class="header">
                <div class="headerleft">
                  <span class="material-symbols-outlined">
                    schedule
                  </span>
                  <h1>Recent</h1>
                </div>

              </div>
              <div class="activity">
                {{#if isEmpty}}
                  <div class="noactivity">
                    <h1>No activity yet</h1>
                  </div>
                {{else}}
                  {{#each posts}}
                    <div class="post">
                      <div class="profile">
                        <img src="{{this.author.profPicLink}}" class="dp" />
                        <div class="headerpost">
                          <p class="handle">@{{this.author.uname}}</p>
                          <a class="title" href="/viewone">{{this.title}}</a>
                        </div>
                      </div>
                      <div class="content">
                        <p class="text">{{{this.content}}}</p>
                        <!-- Use triple curly braces here -->
                      </div>
                      <div class="icons">
                        <div class="tagpost">
                          {{#each this.tags}}
                            <div class="onetag">
                              <p class="tagtext">{{this}}</p>
                            </div>
                          {{/each}}
                        </div>
                        <button type="button" class="icon" id="hearticon">
                          <span class="material-symbols-outlined" id="heart">
                            favorite
                          </span>
                        </button>
                        <button type="button" class="icon" id="bhearticon">
                          <span
                            class="material-symbols-outlined"
                            id="brokenheart"
                          >
                            heart_broken
                          </span>
                        </button>
                        <button
                          type="button"
                          class="icon"
                          id="commenticon"
                          onclick="window.location.href = '/viewone';"
                        >
                          <span class="material-symbols-outlined" id="comment">
                            mode_comment
                          </span>
                        </button>
                      </div>
                    </div>
                  {{/each}}
                {{/if}}

                <div class="spacer2"></div>

                {{#each comments}}
                  <div class="comment">
                    <img src="{{this.image}}" class="dp" />
                    <div class="caption">
                      <p>{{this.content}}</p>
                    </div>
                  </div>
                {{/each}}
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>

  </body>
</html>