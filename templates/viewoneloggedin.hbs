<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      post-content="width=device-width, initial-scale=1.0"
    />
    <!-- icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- styles -->
    <link rel="stylesheet" href="../styles/nav.css" />
    <link rel="stylesheet" href="../styles/general.css" />

    
    <link rel="stylesheet" href="../styles/viewone.css" />
    <link rel="stylesheet" href="../styles/comment.css" />

    <!-- scripts -->
    <script src="//code.jquery.com/jquery.min.js"></script>

    <script src="../scripts/viewone.js"></script>
    <script src="../scripts/recent.js" ></script>
    <script src="../scripts/comment.js"></script>
    
    
    <script src="https://use.fontawesome.com/a31a3f8384.js"></script>

    <title>View one | Girls</title>
  </head>

  <body>
    <!-- NAVIGATIONS!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
    <!-- top navigation -->
    <nav class="nav-container nav-top-container">
      <ul class="nav-top-items">
        <li>
            <a id="logo" href="/homepage">GIRLS</a>
        </li>
        <li>
            <form action="/globalSearch" method="GET">
                <div class="search">
                    <span class="material-symbols-outlined" id="search-symbol">search</span>
                    <input type="search" class="search-input" name="query" placeholder="Search with tags here">
                    <button type="submit" class="search-button">Search</button>
                </div>
            </form>
        </li>
      </ul>
    </nav>
    <!-- top navigation end -->

      <!-- side navigation left -->
      <nav class="nav-container nav-side-left-container">
        <div class="left-wrapper">
            <ul class="nav-side-items">
                <li class="nav-symbol">
                  <a class="nav-symbol-button" id="home-button" href="/homepage">
                    <span
                      class="material-symbols-outlined"
                      id="home-symbol"
                    >home</span>
                    Home
                  </a>
                </li>
                <li class="nav-symbol">
                  <a class="nav-symbol-button" id="profile-button" href="/viewprofile">
                    <span
                      class="material-symbols-outlined"
                      id="profile-symbol"
                    >person</span>Profile
                  </a>
                </li>
                
                <li>
                  <a class="nav-button" id="create-button" href="/createpost">Create Post</a>
                </li>
                <li>
                  <a class="nav-button" id="logout-button"  href="/logout">Log Out</a>
                </li>
            </ul>
        </div>
      </nav>
      <!-- side navigation left end -->

      <!-- side navigation right -->
      <nav class="nav-container nav-side-right-container">
        <div class="right-wrapper">
            <ul class="nav-side-right-items">
                <li>Sort by:</li>
                <li class="nav-symbol">
                    <a class="nav-symbol-button" id="recent-button" href="/recent">
                      <span
                        class="material-symbols-outlined"
                        id="filter-symbol"
                      >schedule</span>Recent
                    </a>
                  </li>
                  <li class="nav-symbol">
                    <a class="nav-symbol-button" id="popular-button" href="/popular">
                      <span
                        class="material-symbols-outlined"
                        id="filter-symbol"
                      >filter_alt</span>Popular
                    </a>
                  </li>
            </ul>
        </div>
      </nav>
<!-- NAVIGATIONS END!!!!!!!!!!!!!!!!!!!!!!!!!!! -->  

   <!-- content -->
<div class="content-container">
    <div class="post">
        <div class="header">
            <div class="profile">
                <img src="{{post.author.profPicLink}}" id="dp" />
            </div>
            <div class="headerpost">
                <p class="handle">
                    <a class="user" href="#">@{{post.author.uname}}</a>
                </p>
                <h1 class="title">{{post.title}}</h1>
            </div>
        </div>
        <div class="post-content">
            <p>{{post.content}}</p>
        </div>
        <div class="tagpost">
            {{#each post.tags}}
            <div class="onetag">
                <p class="tagtext">{{this}}</p>
            </div>
            {{/each}}
        </div>
        <div class="icons">
            <form method="POST" action="/upvotePost/{{post._id}}">
                <button type="submit" class="icon" id="hearticon">
                    <span class="material-symbols-outlined {{#if addClassHeart}}focus{{/if}}">favorite</span>
                </button>
            </form>
            <p class="count">{{post.upvotes}}</p>
            <form method="POST" action="/downvotePost/{{post._id}}">
                <button type="submit" class="icon" id="bhearticon">
                    <span class="material-symbols-outlined {{#if addClassBheart}}focus{{/if}}">heart_broken</span>
                </button>
            </form>
            <p class="count" id="downvote-count">{{post.downvotes}}</p>
            <button type="button" class="icon" id="commenticon">
                <span class="material-symbols-outlined" id="comment">mode_comment</span>
            </button>
            <p class="count" id="comment-count">{{comments.length}}</p>
            <button type="button" class="icon" id="editicon" onclick="editPost()">
                <span class="material-symbols-outlined" id="edit">edit</span>
            </button>
            <form action="/deletePost/{{post._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
                <button type="submit" class="icon" id="deleteicon">
                    <span class="material-symbols-outlined" id="delete">delete</span>
                </button>
            </form>
        </div>
    </div>

    <div>
        <form method="POST" action="/addComment/{{post._id}}">
            <div id="add-comment" class="posta2">
                <textarea
                    name="content"
                    class="bg-comment2"
                    id="commentinput"
                    placeholder="Enter comment here"
                    aria-placeholder="Comment"
                ></textarea>
                <input
                    type="hidden"
                    class="search search-input"
                    name="postId"
                    value="{{postId}}"
                />
                <input
                    type="hidden"
                    class="search"
                    name="parentCommentId"
                    value="{{parentCommentId}}"
                />
            </div>
            <div class="text-end">
                <button
                    type="submit"
                    id="comment-button"
                >Comment</button>
            </div>
        </form>
    </div>

    <div id="comments">
        {{#each comments}}
            <div class="comment" data-post-id="{{post._id}}" data-comment-id="{{this._id}}">
                <!-- Render each comment dynamically -->
                <div class="profile-container">
                  <p class="profile-picture">
                    {{#if this.author.profPicLink}}
                      <img src="{{this.author.profPicLink}}" class="profile-picture" />
                    {{else}}
                        <img src="./public/images/defUser.png" class="profile-picture" />
                    {{/if}}
                  </p>

                  <div class="user-info">
                      {{#if this.author.uname}}
                            <a class="user" href="/viewprofile/{{this.author._id}}">@{{this.author.uname}}</a>
                        {{else}}
                            <a class="user" href="/viewprofile/{{this.author._id}}">girlsUser</a>
                        {{/if}}
                  </div>
                </div>

                <div class="editable">
                    {{this.content}}
                </div>
                
                <button id="edit-button" data-post-id="{{post._id}}" data-comment-id="{{this._id}}">Edit</button>
                <button id="delete-button" data-post-id="{{post._id}}" data-comment-id="{{this._id}}">Delete</button>

                <form action="/reply/comment/{{this.post._id}}/{{this._id}}" method="post">
                  <textarea
                      name="content"
                      class="replyInput"
                      placeholder="Reply to this comment"
                  ></textarea>
                  <button type="submit">Reply</button>
                </form>
                <button onclick="toggleCollapse(this)">Collapse</button>

                <!-- Render replies dynamically if applicable -->
                        {{#each this.replies}}
                            <div class="comment" data-post-id="{{post._id}}"  data-comment-id="{{this._id}}"> 
                                <div class="profile-container">
                                <p class="profile-picture">
                                  {{#if this.author.profPicLink}}
                                    <img src="{{this.author.profPicLink}}" class="profile-picture" />
                                  {{else}}
                                      <img src="./public/images/defUser.png" class="profile-picture" />
                                  {{/if}}
                                </p>

                                <div class="user-info">
                                    {{#if this.author.uname}}
                                          <a class="user" href="/viewprofile/{{this.author._id}}">@{{this.author.uname}}</a>
                                      {{else}}
                                          <a class="user" href="/viewprofile/{{this.author._id}}">girlsUser</a>
                                      {{/if}}
                                </div>
                              </div>
                                <div class="editable">
                                    {{this.content}}
                                </div>
                                
                                <button id="edit-button" data-post-id="{{post._id}}" data-comment-id="{{this._id}}">Edit</button>
                                <button id="delete-button" data-post-id="{{post._id}}" data-comment-id="{{this._id}}">Delete</button>

                                <form action="/reply/comment/{{this.post._id}}/{{this._id}}" method="post">
                                <textarea
                                    name="content"
                                    class="replyInput"
                                    placeholder="Reply to this comment"
                                ></textarea>
                                <button type="submit">Reply</button>
                              </form>
                                <button onclick="toggleCollapse(this)">Collapse</button>
                            </div>
                        {{/each}}
            </div>
        {{/each}}
    </div>
</div>


</div>


    
<script>
    function editPost() {
        const postId = '{{post._id}}';
        window.location.href = `/edit/${postId}`;
    }
</script>

  </body>
</html>