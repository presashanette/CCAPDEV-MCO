            <div class="replyInput" contenteditable="true" placeholder="Reply to aReply comment"></div>
        <button id="reply-button" data-post-id="{{post._id}}" data-comment-id="{{aReply._id}}">Reply</button>
            <button onclick="toggleCollapse(aReply)">Collapse</button>

            <!-- Render replies dynamically if applicable -->
            <div class="replies">
                {{#each replies}}
                    {{> reply aReply post = post}}
                {{/each}}
            </div>
        </div>